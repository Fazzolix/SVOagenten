  <script>
    // MSAL-konfiguration med dina inst칛llningar fr친n Azure AD
    const msalConfig = {
      auth: {
        clientId: "0d87ea11-6895-4948-a182-34a80fd7387f",  // Ers칛tt med ditt Application (client) ID
        authority: "https://login.microsoftonline.com/4c98088a-8771-4b89-86fa-342cf75f4e28"  // Ers칛tt med ditt Directory (tenant) ID
      }
    };

    // Skapa MSAL-klienten
    const clientApplication = new msal.PublicClientApplication(msalConfig);
    // Ange de scopes som beh칬vs (t.ex. "User.Read")
    const requestObj = { scopes: ["User.Read"] };

    // Huvudfunktionen som k칬r SSO och s칛tter upp chattens URL
    async function main() {
      // Om ingen anv칛ndare 칛r inloggad, logga in automatiskt
      if (clientApplication.getAllAccounts().length === 0) {
        try {
          await clientApplication.loginPopup(requestObj)
            .then((response) => {
              console.log("Inloggning lyckades:", response);
            })
            .catch((error) => {
              console.error("Fel vid inloggning:", error);
            });
        } catch (error) {
          console.error("LoginPopup misslyckades:", error);
        }
      }
      
      // Kopiera din token endpoint URL fr친n Copilot Studio och ange den h칛r
      var tokenEndpointURL = "api://0d87ea11-6895-4948-a182-34a80fd7387f/User.Read";  // Ers칛tt med din faktiska token endpoint URL
      
      // S칛tt upp ett unikt userId med ett eget prefix (max 64 tecken)
      var account = clientApplication.getAllAccounts()[0];
      var userId = account 
            ? ("My-custom-prefix" + account.homeAccountId).substring(0, 64)
            : (Math.random().toString() + Date.now().toString()).substring(0,64);
      
      // Ange BOT-ID fr친n din Copilot Studio-agent (칛ndra om det beh칬vs)
      var botId = "crdc2_generativaSvarTest";
      // Bygg URL:en till din agent, inkludera eventuellt tokenEndpointURL som en query-parameter om det kr칛vs
      var chatUrl = `https://copilotstudio.microsoft.com/environments/Default-4c98088a-8771-4b89-86fa-342cf75f4e28/bots/${botId}/webchat?__version__=2`;
      
      // Om du beh칬ver skicka med tokenEndpointURL, g칬r s친 h칛r (ta bort kommentaren om det beh칬vs)
      // chatUrl += `&tokenEndpoint=${encodeURIComponent(tokenEndpointURL)}`;
      
      // S칛tt iframes src-attribut s친 att agenten laddas i modal-f칬nstret
      document.getElementById("chatFrame").src = chatUrl;
    }

    // Funktion f칬r att visa/d칬lja modal-f칬nstret
    function toggleChat() {
      var modal = document.getElementById("chatModal");
      modal.style.display = (modal.style.display === "block") ? "none" : "block";
    }

    // Starta SSO- och agent-inst칛llningen
    main();
  </script>
  
